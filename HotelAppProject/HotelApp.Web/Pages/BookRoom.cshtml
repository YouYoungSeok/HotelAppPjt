@page
@model HotelApp.Web.Pages.BookRoomModel
@{
    ViewData["Title"] = "BookRoom";
}

<h1>방 예약</h1>

<h2>@Model.RoomType.Title</h2>
<p>
    @Model.RoomType.Description
</p>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.FirstName"></label>
        <input asp-for="@Model.FirstName" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.LastName"></label>
        <input asp-for="@Model.LastName" />
    </div>

    <button type="submit" class="btn-primary">예약하기</button>

</form>